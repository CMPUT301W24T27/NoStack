<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.organizer.OrganizerEventCreate"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/black"
            android:clickable="true"
            android:focusable="true"
            android:importantForAccessibility="no"
            app:borderWidth="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/outline_arrow_back_24"
            app:tint="@color/SignInUpTextColor" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EventCreationTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="50dp"
            android:hint="Event Title"
            android:textColorHint="@color/grey"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/SignInUpTextColor"
            app:cursorColor="@color/SignInUpTextColor"
            app:endIconDrawable="@drawable/baseline_add_box_24"
            app:endIconMode="custom"
            app:endIconTint="@color/SignInUpTextColor"
            app:hintEnabled="true"
            app:hintTextColor="@color/SignInUpTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EventCreationTitleEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/SignInUpTextColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EventCreationStartDateTimeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:hint="Start Date/Time"
            android:textColorHint="@color/grey"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/SignInUpTextColor"
            app:cursorColor="@color/SignInUpTextColor"
            app:endIconDrawable="@drawable/baseline_edit_calendar_24"
            app:endIconMode="custom"
            app:endIconContentDescription="StartDateTime"
            app:endIconTint="@color/SignInUpTextColor"
            app:hintEnabled="true"
            app:hintTextColor="@color/SignInUpTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EventCreationTitleLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EventCreationStartDateTimeEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:inputType="none"
                android:textColor="@color/white"
                android:textColorHint="@color/SignInUpTextColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EventCreationEndDateTimeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:hint="End Date/Time"
            android:textColorHint="@color/grey"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/SignInUpTextColor"
            app:cursorColor="@color/SignInUpTextColor"
            app:endIconDrawable="@drawable/baseline_edit_calendar_24"
            app:endIconMode="custom"
            app:endIconContentDescription="EndDateTime"
            app:endIconTint="@color/SignInUpTextColor"
            app:hintEnabled="true"
            app:hintTextColor="@color/SignInUpTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EventCreationStartDateTimeLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EventCreationEndDateTimeEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:inputType="none"
                android:textColor="@color/white"
                android:textColorHint="@color/SignInUpTextColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EventCreationLocationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:hint="Location"
            android:textColorHint="@color/grey"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/SignInUpTextColor"
            app:cursorColor="@color/SignInUpTextColor"
            app:endIconDrawable="@drawable/baseline_add_location_24"
            app:endIconMode="custom"
            app:endIconTint="@color/SignInUpTextColor"
            app:hintEnabled="true"
            app:hintTextColor="@color/SignInUpTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EventCreationEndDateTimeLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EventCreationLocationEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/SignInUpTextColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EventCreationLimitLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:hint="User Limit"
            android:textColorHint="@color/grey"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/SignInUpTextColor"
            app:cursorColor="@color/SignInUpTextColor"
            app:endIconDrawable="@drawable/baseline_add_box_24"
            app:endIconMode="custom"
            app:endIconTint="@color/SignInUpTextColor"
            app:hintEnabled="true"
            app:hintTextColor="@color/SignInUpTextColor"
            app:layout_constraintEnd_toStartOf="@+id/unlimitedUserSwitch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EventCreationLocationLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EventCreationLimitEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:drawableTint="@color/SignInUpTextColor"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/SignInUpTextColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EventCreationDescriptionLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="15dp"
            android:hint="Description"
            android:textColorHint="@color/grey"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/SignInUpTextColor"
            app:cursorColor="@color/SignInUpTextColor"
            app:endIconDrawable="@drawable/baseline_article_24"
            app:endIconMode="custom"
            app:endIconTint="@color/SignInUpTextColor"
            app:hintEnabled="true"
            app:hintTextColor="@color/SignInUpTextColor"
            app:layout_constraintBottom_toTopOf="@+id/EventCreationReuseQRCheckBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EventCreationLimitLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EventCreationDescriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:inputType="textMultiLine"
                android:textColor="@color/white"
                android:textColorHint="@color/SignInUpTextColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.google.android.material.textfield.TextInputLayout>



        <CheckBox
            android:id="@+id/EventCreationReuseQRCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Reuse Check-In QR Code"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/SignInUpTextColor"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/EventCreationCreateEventButton"
            app:layout_constraintStart_toStartOf="@+id/EventCreationCreateEventButton" />

        <Button
            android:id="@+id/EventCreationCreateEventButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lightBlue"
            android:paddingHorizontal="90dp"
            android:paddingVertical="12dp"
            android:text="Create Event"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.97" />

        <ImageView
            android:id="@+id/EventCreationEventImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"

            android:src="@drawable/baseline_add_a_photo_24"
            app:layout_constraintBottom_toTopOf="@+id/EventCreationTitleLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backButton"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/EventCreationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Create Event"
            android:textColor="@color/text"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/backButton"
            app:layout_constraintStart_toEndOf="@+id/backButton"
            app:layout_constraintTop_toTopOf="@+id/backButton" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/unlimitedUserSwitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:checked="true"
            android:paddingStart="8dp"
            android:text="Unlimited"
            android:textColor="@color/grey"
            android:textColorLink="@color/SignInUpTextColor"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/EventCreationDescriptionLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EventCreationLocationLayout"
            app:thumbTint="@color/SignInUpTextColor"
            app:trackTint="#3D7489" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>